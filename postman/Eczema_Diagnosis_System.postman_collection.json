{
  "info": {
    "name": "Eczema Diagnosis System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"role\": \"patient\",\n    \"dateOfBirth\": \"1990-01-01\",\n    \"gender\": \"male\",\n    \"phoneNumber\": \"+1234567890\",\n    \"address\": \"123 Main St\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Appointments",
      "item": [
        {
          "name": "Create Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"doctorId\": \"{{doctorId}}\",\n    \"appointmentDate\": \"2025-03-21T10:00:00.000Z\",\n    \"reason\": \"Regular checkup\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/appointments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments"]
            }
          }
        },
        {
          "name": "Get My Appointments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments"]
            }
          }
        },
        {
          "name": "Update Appointment Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"status\": \"confirmed\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/appointments/{{appointmentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments", "{{appointmentId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Diagnoses",
      "item": [
        {
          "name": "Upload Image for Diagnosis",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/eczema/diagnose",
              "host": ["{{baseUrl}}"],
              "path": ["api", "eczema", "diagnose"]
            }
          }
        },
        {
          "name": "Get My Diagnoses",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/eczema/diagnoses",
              "host": ["{{baseUrl}}"],
              "path": ["api", "eczema", "diagnoses"]
            }
          }
        },
        {
          "name": "Get Diagnosis by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/eczema/diagnoses/{{diagnosisId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "eczema", "diagnoses", "{{diagnosisId}}"]
            }
          }
        },
        {
          "name": "Add Doctor Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"comments\": \"Patient shows improvement. Continue with current treatment plan.\",\n    \"adjustments\": [\n        {\n            \"field\": \"recommendations.treatments\",\n            \"oldValue\": null,\n            \"newValue\": [\n                {\n                    \"type\": \"Topical Corticosteroid\",\n                    \"description\": \"Apply once daily\",\n                    \"priority\": 1\n                }\n            ],\n            \"reason\": \"Reducing application frequency due to improvement\"\n        }\n    ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/eczema/diagnoses/{{diagnosisId}}/review",
              "host": ["{{baseUrl}}"],
              "path": ["api", "eczema", "diagnoses", "{{diagnosisId}}", "review"]
            }
          }
        }
      ]
    },
    {
      "name": "Doctors",
      "item": [
        {
          "name": "Get Available Doctors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/doctors",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors"]
            }
          }
        },
        {
          "name": "Get Doctor Available Slots",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/doctors/{{doctorId}}/available-slots",
              "host": ["{{baseUrl}}"],
              "path": ["api", "doctors", "{{doctorId}}", "available-slots"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ]
}
